{
	"data": {
		"filename": "hh_processed_data.csv",
		"columns": [
			"T_ROOM",
			"T_nextPeak_upper"
		],
		"condition":  ["Thermo_Switch_On"],
		"sequence_length": 10,
		"train_test_split": 0.85,
		"normalise": true
	},
	"training": {
		"epochs": 200,
		"batch_size": 128
	},
	"model": {
		"loss": "mse",
		"optimizer": "adam",
		"save_dir": "saved_models",
		"layers": [
			{
				"type": "lstm",
				"neurons": 50,
				"input_timesteps": 10,
				"return_seq": true,
				"input_dim": 1
			},
			{			
				"type": "dropout",
				"rate": 0.2
			},
			{
				"type": "lstm",
				"neurons": 50,
				"return_seq": false
			},
			{
				"type": "dropout",
				"rate": 0.2
			},
			{
				"type": "dense",
				"neurons": 1,
				"activation": "linear"
			}
		]
	}
}
